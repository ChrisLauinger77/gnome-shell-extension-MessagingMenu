<schemalist>
  <schema id="org.gnome.shell.extensions.messagingmenu"
      path="/org/gnome/shell/extensions/messagingmenu/">
    <key name="notify-email" type="b">
      <default>true</default>
      <summary>Alert on new Email</summary>
      <description>Icon blinks on new Email</description>
    </key>
    <key name="notify-chat" type="b">
      <default>true</default>
      <summary>Alert on new Chat</summary>
      <description>Icon blinks on new Chat</description>
    </key>
    <key name="notify-mblogging" type="b">
      <default>false</default>
      <summary>Alert on new News</summary>
      <description>Icon blinks on new Blogposts</description>
    </key>
    <key name="notify-other" type="b">
      <default>false</default>
      <summary>Alert on new Messages from other Apps</summary>
      <description>Icon blinks on new Messages</description>
    </key>
    <key name="color" type="s">
      <default>'#ff0000'</default>
      <summary>Notification Color HEX</summary>
      <description>The color used to paint the Icon(old version since GNOME 41)</description>
    </key>
    <key name="color-rgba" type="s">
      <default>'rgb(255,0,0)'</default>
      <summary>Notification Color RGB</summary>
      <description>The color used to paint the Icon(new version since GNOME 42)</description>
    </key>
    <key name="compatible-chats" type="s">
      <default>'amsn;caprine;chat.rocket.RocketChat;im.dino.Dino;emesene;empathy;fedora-empathy;gajim;hexchat;io.github.qtox.qTox;kadu;kde4-kmess;kde4-konversation;kde4-kopete;openfetion;org.gnome.Fractal;org.gnome.Polari;pidgin;qtox;qutim;signal-desktop;skype;skypeforlinux;slack;telegramdesktop;utox;venom;viber;xchat;discord'</default>
      <summary>Compatible Chats</summary>
      <description>case sensitive name of the .desktop file names to start the app (with .desktop ending) delimited by semicolon</description>
    </key>
    <key name="compatible-mblogs" type="s">
      <default>'birdie;corebird;fedora-gwibber;friends-app;gfeedline;gtwitter;gwibber;heybuddy;hotot;mitter;org.baedert.corebird;pino;polly;qwit;turpial;twitux;uk.co.ibboard.cawbird;com.github.bleakgrey.tootle'</default>
      <summary>Compatible MBlogs</summary>
      <description>case sensitive name of the .desktop file names to start the app (with .desktop ending) delimited by semicolon</description>
    </key>
    <key name="compatible-emails" type="s">
      <default>'claws-mail;evolution;geary;gnome-gmail;icedove;kde4-KMail2;mozilla-thunderbird;org.gnome.Evolution;org.gnome.Geary;postler;thunderbird'</default>
      <summary>Compatible Emails</summary>
      <description>case sensitive name of the .desktop file names to start the app (with .desktop ending) delimited by semicolon</description>
    </key>
    <key name="compatible-hidden-email-notifiers" type="s">
      <default>'gmail-notify;mail-notification;Mailnag;Thunderbird'</default>
      <summary>Compatible hidden Email Notifiers</summary>
      <description>Must be their Notificationtitle, because lookup_app doesnt work here</description>
    </key>
        <key name="compatible-hidden-mblog-notifiers" type="s">
      <default>'friends;GFeedLine;gwibber'</default>
      <summary>Compatible hidden MBlog Notifiers</summary>
      <description>Must be their Notificationtitle, because lookup_app doesnt work here</description>
    </key>
  </schema>
</schemalist>
